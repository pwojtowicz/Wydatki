<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
           <gradient
        android:startColor="#ffc300"
        android:centerColor="#ff9800"
        android:endColor="#ffc300"
        android:angle="270"/>        
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
        android:startColor="#ffa300"
        android:centerColor="#ff6800"
        android:endColor="#ffa300"
        android:angle="270"/>
            
         </shape>
    </item>

    <item>        
        <shape>
            <solid android:color="@color/transparent"/>
        </shape>
    </item>
</selector>